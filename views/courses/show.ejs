<h1><%= course.title %></h1>
<p><%= course.description %></p>

<form action="/courses/<%= course._id %>/reviews" method="POST">
  <input name="studentName" placeholder="Student Name" />
  <input name="rating" type="number" min="1" max="5" />
  <input name="comment" placeholder="Comment" />
  <button>Add Review</button>
</form>

<h2>Reviews</h2>
<% course.reviews.forEach(r => { %>
  <p><strong><%= r.studentName %></strong>: <%= r.comment %></p>   
<% }) %>    

<a href="/courses">Back to Courses</a>
<a href="/courses/<%= course._id %>/edit">Edit Course</a>
<form action="/courses/delete/<%= course._id %>" method="POST" style="margin-top:20px;">
  <button>Delete Course</button>
</form>
